<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="create-table-organization" author="loc" runAlways="true">
        <preConditions onFail="MARK_RAN" onFailMessage="table organization already exists">
            <not>
                <tableExists tableName="organization" />
            </not>
        </preConditions>
        <createTable tableName="organization">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="TEXT">
            </column>
            <column name="image_url" type="VARCHAR(255)">
            </column>
        </createTable>
    </changeSet>

    <!-- ChangeSet for creating the Subject table -->
    <changeSet id="create-table-subject" author="loc" runAlways="true">
        <preConditions onFail="MARK_RAN" onFailMessage="table subject already exists">
            <not>
                <tableExists tableName="subject"/>
            </not>
        </preConditions>
        <createTable tableName="subject">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="organization_id" type="BIGINT"/>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="TEXT"/>
        </createTable>

        <addForeignKeyConstraint 
            baseTableName="subject"
            baseColumnNames="organization_id"
            constraintName="fk_subject_organization"
            referencedTableName="organization"
            referencedColumnNames="id"/>
    </changeSet>

    <!-- ChangeSet for creating the SubjectMetadata table -->
    <changeSet id="create-table-subject_metadata" author="loc"  runAlways="true">
        <preConditions onFail="MARK_RAN" onFailMessage="table subject_metada already exists">
            <not>
                <tableExists tableName="subject_metadata"/>
            </not>
        </preConditions>
        <createTable tableName="subject_metadata">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="subject_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="midterm_format" type="VARCHAR(255)"/>
            <column name="practical_format" type="VARCHAR(255)"/>
            <column name="final_format" type="VARCHAR(255)"/>
            <column name="coursework_weight" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="midterm_weight" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="practical_weight" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="final_weight" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="semester" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="year" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Add Foreign Key for subject_id to subject table -->
        <addForeignKeyConstraint 
            baseTableName="subject_metadata"
            baseColumnNames="subject_id"
            constraintName="fk_subject_metadata_subject"
            referencedTableName="subject"
            referencedColumnNames="id"/>
    </changeSet>
    
    <!-- ChangeSet for creating the Teacher table -->
    <changeSet id="create-table-teacher" author="loc" runAlways="true">
        <preConditions onFail="MARK_RAN" onFailMessage="table teacher already exists">
            <not>
                <tableExists tableName="teacher"/>
            </not>
        </preConditions>
        <createTable tableName="teacher">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="organization_id" type="BIGINT"/>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="VARCHAR(150)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="dob" type="DATE">
            </column>
            <column name="gender" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(50)">
            </column>
            <column name="degree" type="VARCHAR(50)">
            </column>
            <column name="research_direction" type="VARCHAR(255)">
            </column>
        </createTable>

        <addForeignKeyConstraint 
            baseTableName="teacher"
            baseColumnNames="organization_id"
            constraintName="fk_teacher_organization"
            referencedTableName="organization"
            referencedColumnNames="id"/>
    </changeSet>
    
    <!-- ChangeSet for creating the Student table -->
    <changeSet id="create-table-student" author="loc" runAlways="true">
        <preConditions onFail="MARK_RAN" onFailMessage="table student already exists">
            <not>
                <tableExists tableName="student"/>
            </not>
        </preConditions>
        <createTable tableName="student">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="organization_id" type="BIGINT"/>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="VARCHAR(150)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="dob" type="DATE">
            </column>
            <column name="gender" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(50)">
            </column>
            <column name="advisory_class" type="VARCHAR(50)">
            </column>
            <column name="academic_batch" type="VARCHAR(50)">
            </column>
        </createTable>

        <addForeignKeyConstraint 
            baseTableName="student"
            baseColumnNames="organization_id"
            constraintName="fk_student_organization"
            referencedTableName="organization"
            referencedColumnNames="id"/>
    </changeSet>
    
    <!-- ChangeSet for creating the Staff table -->
    <changeSet id="create-table-staff" author="loc" runAlways="true">
        <preConditions onFail="MARK_RAN" onFailMessage="table staff already exists">
            <not>
                <tableExists tableName="staff"/>
            </not>
        </preConditions>
        <createTable tableName="staff">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="organization_id" type="BIGINT"/>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="VARCHAR(150)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="dob" type="DATE">
            </column>
            <column name="gender" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(50)">
            </column>
            <column name="position" type="VARCHAR(255)">
            </column>
        </createTable>

        <addForeignKeyConstraint 
            baseTableName="staff"
            baseColumnNames="organization_id"
            constraintName="fk_staff_organization"
            referencedTableName="organization"
            referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="drop_table_classtoom" author="loc">
        <dropTable tableName="classroom" />
    </changeSet>
    
    <!-- ChangeSet for creating the Staff table -->
    <changeSet id="create-table-classroom" author="loc" runAlways="true">
        <preConditions onFail="MARK_RAN" onFailMessage="table classroom already exists">
            <not>
                <tableExists tableName="classroom"/>
            </not>
        </preConditions>
        <createTable tableName="classroom">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="organization_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="subject_code" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="teacher_code" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="teacher_assistant_code" type="VARCHAR(50)"/>
            <column name="subject_code" type="VARCHAR(50)"/>
            <column name="start_date" type="DATE"/>
            <column name="end_date" type="DATE"/>
            <column name="note" type="TEXT"/>
            <column name="type" type="VARCHAR(10)"/>
            <column name="is_org_managed" type="BOOLEAN" defaultValue="false"/>
            <column name="credits" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="size" type="INT">
            </column>
            <column name="semester" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="year" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint 
            baseTableName="classroom"
            baseColumnNames="organization_id"
            constraintName="fk_classroom_organization"
            referencedTableName="organization"
            referencedColumnNames="id"/>

        <addForeignKeyConstraint 
            baseTableName="classroom"
            baseColumnNames="subject_code"
            constraintName="fk_classroom_subject"
            referencedTableName="subject"
            referencedColumnNames="code"/>
    </changeSet>

    <changeSet id="table-classroom-add-column-type" author="loc" runAlways="true">
        <preConditions onFail="CONTINUE" onFailMessage="column type already exists in table classroom">
            <not>
                <columnExists  tableName="classroom" columnName="type" />
            </not>
        </preConditions>
        <addColumn tableName="classroom">
            <column name="type" type="VARCHAR(10)">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="table-classroom-add-column-note" author="loc" runAlways="true">
        <preConditions onFail="CONTINUE" onFailMessage="column note already exists in table classroom">
            <not>
                <columnExists  tableName="classroom" columnName="note" />
            </not>
        </preConditions>
        <addColumn tableName="classroom">
            <column name="note" type="TEXT"/>
        </addColumn>
    </changeSet>

    <changeSet id="table-classroom-add-column-teacher_code" author="loc" runAlways="true">
        <preConditions onFail="CONTINUE" onFailMessage="column teacher_code already exists in table classroom">
            <not>
                <columnExists  tableName="classroom" columnName="teacher_code" />
            </not>
        </preConditions>
        <addColumn tableName="classroom">
            <column name="teacher_code" type="VARCHAR(50)">
                <constraints nullable="false" />
            </column>
        </addColumn>
        
        <addForeignKeyConstraint 
            baseTableName="classroom"
            baseColumnNames="teacher_code"
            constraintName="fk_classroom_teacher"
            referencedTableName="teacher"
            referencedColumnNames="code"/>
    </changeSet>

    <changeSet id="table-classroom-add-column-teacher_assistant_code" author="loc" runAlways="true">
        <preConditions onFail="CONTINUE" onFailMessage="column teacher_assistant_code already exists in table classroom">
            <not>
                <columnExists  tableName="classroom" columnName="teacher_assistant_code" />
            </not>
        </preConditions>
        <addColumn tableName="classroom">
            <column name="teacher_assistant_code" type="VARCHAR(50)"/>
        </addColumn>
        <addForeignKeyConstraint 
            baseTableName="classroom"
            baseColumnNames="teacher_assistant_code"
            constraintName="fk_classroom_teacher_assistant"
            referencedTableName="teacher"
            referencedColumnNames="code"/>
    </changeSet>

</databaseChangeLog>